<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- Mapper의 namespace는 비우면 error -->
<mapper namespace="com.moveone.app.departments.DepartmentDAO">

	<select id="getDetail" parameterType="com.moveone.app.departments.DepartmentDTO" resultType="com.moveone.app.departments.DepartmentDTO">
		SELECT * FROM DEPARTMENTS WHERE DEPARTMENT_ID = #{department_id}
	</select>
	
	<select id="getList" resultType="com.moveone.app.departments.DepartmentDTO">
		SELECT * FROM DEPARTMENTS
	</select>
</mapper>