<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- Mapper의 namespace는 비우면 error -->
  <!-- namespace의 값은 중복 X -->
  <!-- 해당 mapper를 사용할 DAO의 풀패키지명으로 작성 -->
<mapper namespace="com.moveone.app.regions.RegionDAO">
	<sql id="search2">
	<!-- TITLE, CONTENT, WRITER -->
		<where>
			<if test="kind=='kind1' or kind=='kind4'">
			TITLE LIKE '%'||#{search}||'%'
			</if>
			<if test="kind=='kind2' or kind=='kind4'">
			OR CONTENT LIKE '%'||#{search}||'%'
			</if>
			<if test="kind=='kind3' or kind=='kind4'">
			OR WRITER LIKE '%'||#{search}||'%'
			</if>
		</where>
	</sql>
	
	<sql id="search">
		WHERE REGION_NAME LIKE '%'||#{search}||'%'
	</sql>
	
	<insert id="addFile" parameterType="RegionFileDTO">
		INSERT INTO REGIONFILES VALUES (REGIONFILES_SEQ.NEXTVAL, #{region_id}, #{fileName}, #{oriName})
	</insert>

	<select id="getTotal" parameterType="Pager" resultType="Long">
		SELECT COUNT(REGION_ID) FROM REGIONS
		<include refid="search"></include>
	</select>

	<!-- detail -->
	<!-- id값은 dao의 메서드명 -->
	<select id="getDetail" resultMap="getDetailResult" parameterType="RegionDTO">
		SELECT *
		FROM REGIONS R
			LEFT OUTER JOIN REGIONFILES RF USING (REGION_ID)
		WHERE REGION_ID = #{region_id}
	</select>
	
	<resultMap type="RegionDTO" id="getDetailResult">
		<!-- ID : PK -->
		<id column="REGION_ID" property="region_id"/>
		<!-- result : pk외의 나머지 -->
		<result column="RESION_NAME" property="region_name"/>
		<!-- 1:1 -->
		<association property="regionFileDTO" javaType="RegionFileDTO">
			<id column="FILENUM" property="fileNum"/>
			<result column="FILENAME" property="fileName"/>
			<result column="ORINAME" property="oriName"/>			
		</association>
	</resultMap>
	
	<!-- list -->
	<select id="getList" parameterType="Pager" resultType="RegionDTO">
		SELECT * 
		FROM (
			SELECT ROWNUM R, RG.*
			FROM ( 
				SELECT * 
				FROM REGIONS 
				<include refid="search"></include>
				ORDER BY REGION_ID DESC 
				) RG
			)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<insert id="add" parameterType="RegionDTO">
		<selectKey keyProperty="region_id" order="BEFORE" resultType="Long">
			SELECT EMPLOYEES_SEQ.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO REGIONS VALUES (#{region_id}, #{region_name})
	</insert>
	
	<update id="update" parameterType="RegionDTO">
		UPDATE REGIONS SET REGION_NAME=#{region_name} WHERE REGION_ID=#{region_id}
	</update>
	
	<delete id="delete" parameterType="RegionDTO">
		DELETE REGIONS WHERE REGION_ID=#{region_id}
	</delete>
	
	<!-- File List 1:N -->
	<select id="getListFiles" resultType="RegionFileDTO" parameterType="RegionDTO">
		SELECT * FROM REGIONFILES WHERE REGION_ID = #{region_id}
	</select>
</mapper>